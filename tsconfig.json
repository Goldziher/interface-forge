{
    "include": ["**/*.ts"],
    "exclude": ["docusaurus"],
    "compilerOptions": {
        "alwaysStrict": true,
        "baseUrl": ".",
        "esModuleInterop": true,
        "lib": ["ESNext"],
        "module": "CommonJS",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "skipLibCheck": true,
        "strict": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "target": "ES2015",
        "types": ["vitest/globals", "vitest"]
    }
}
